<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.balkarsinghdandiwal.personalorganisersystem.editfriends"
    tools:showIn="@layout/app_bar_editfriends"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TableLayout
        android:id="@+id/add_table"
        android:layout_width="317dp"
        android:layout_height="0dp"
        android:paddingTop="40dp"
        app:layout_constraintRight_toLeftOf="@+id/deletefriend"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/deletefriend"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/deletefriend"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="119dp"
                android:layout_height="28dp"
                android:text="First Name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/fname"
                android:layout_width="159dp"
                android:layout_height="38dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="119dp"
                android:layout_height="28dp"
                android:text="Last Name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="119dp" />

            <EditText
                android:id="@+id/lname"
                android:layout_width="159dp"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="181dp"
                tools:layout_editor_absoluteY="119dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:text="Date of Birth"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/etxt_fromdate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight=".5"
                android:hint="@string/pick_date"
                android:digits="0123456789"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="299dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/sex"
                android:layout_width="119dp"
                android:layout_height="28dp"
                android:text="Sex"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="36dp"
                tools:layout_editor_absoluteY="119dp" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight=".5"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="299dp" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="119dp"
                android:layout_height="28dp"
                android:text="Address"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="78dp"
                android:ems="10"
                android:inputType="textMultiLine" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/editfriend"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginEnd="1dp"
        android:text="Update Friend"
        app:layout_constraintRight_toLeftOf="@+id/deletefriend"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/add_table"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/add_table" />

    <Button
        android:id="@+id/deletefriend"
        android:layout_width="156dp"
        android:layout_height="48dp"
        android:layout_marginEnd="37dp"
        android:text="Delete Friend"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="113dp"
        android:layout_marginRight="37dp" />
</android.support.constraint.ConstraintLayout>
