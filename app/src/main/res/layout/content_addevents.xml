<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.balkarsinghdandiwal.personalorganisersystem.addevents"
    tools:showIn="@layout/app_bar_addevents">

    <TableLayout
        android:id="@+id/add_table"
        android:layout_width="301dp"
        android:layout_height="280dp"
        android:paddingTop="40dp"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="74dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="49dp" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:text="Date"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1" />

            <EditText
                android:id="@+id/ddate"
                android:layout_width="183dp"
                android:layout_height="48dp"
                android:digits="0123456789"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textView"
                android:layout_width="66dp"
                android:layout_height="32dp"
                android:text="Time"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/ttime"
                android:layout_width="183dp"
                android:layout_height="45dp"
                android:digits="0123456789"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintRight_creator="1" />
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"

                tools:layout_constraintTop_creator="1"
                tools:layout_constraintBottom_creator="1" />

            <EditText
                android:id="@+id/location"
                android:layout_width="183dp"
                android:layout_height="45dp"
                />
        </TableRow>

    </TableLayout>
    <Button
        android:id="@+id/addevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Event"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="53dp"
        app:layout_constraintRight_toRightOf="@+id/add_table"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/add_table" />



</android.support.constraint.ConstraintLayout>
